{
  "name": "AWS-EKS-POD-DISK-USAGE-{{cluster_name.name}}-{{kube_deployment.name}}",
  "type": "query alert",
  "query": "avg(last_5m):(avg:kubernetes.kubelet.volume.stats.used_bytes{kube_namespace:thornode} by {cluster_name,kube_deployment} / avg:kubernetes.kubelet.volume.stats.capacity_bytes{kube_namespace:thornode} by {cluster_name,kube_deployment}) * 100 > 95",
  "message": "@pagerduty",
  "tags": [
    "thorchain"
  ],
  "options": {
    "notify_audit": false,
    "silenced": {},
    "include_tags": true,
    "thresholds": {
      "critical": 95,
      "warning": 90
    },
    "require_full_window": false,
    "notify_no_data": false,
    "renotify_interval": 0,
    "escalation_message": "",
    "new_group_delay": 60
  },
  "priority": 1,
  "restricted_roles": null
}
