{
  "name": "AWS-EKS-HOST-DISK-USAGE-{{device.name}}-{{host.name}}",
  "type": "query alert",
  "query": "avg(last_5m):avg:system.disk.free{device:/dev/nvme*} by {device,host} < 25000000000",
  "message": "@pagerduty",
  "tags": [
    "thorchain"
  ],
  "options": {
    "notify_audit": false,
    "locked": false,
    "silenced": {},
    "include_tags": true,
    "thresholds": {
      "critical": 25000000000,
      "warning": 50000000000
    },
    "require_full_window": false,
    "notify_no_data": false,
    "renotify_interval": 0,
    "escalation_message": "",
    "new_group_delay": 60
  },
  "priority": 1,
  "restricted_roles": null
}
