{
  "name": "AWS-EKS-HOST-CPU-LOAD-{{host.name}}",
  "type": "query alert",
  "query": "avg(last_15m):avg:system.load.15{kube_cluster_name:thorchain*} by {host} > 9",
  "message": "@pagerduty",
  "tags": [
    "thorchain"
  ],
  "options": {
    "notify_audit": false,
    "silenced": {},
    "include_tags": true,
    "thresholds": {
      "critical": 9,
      "warning": 8
    },
    "require_full_window": false,
    "notify_no_data": false,
    "renotify_interval": 0,
    "escalation_message": "",
    "new_group_delay": 60
  },
  "priority": 1,
  "restricted_roles": null
}
