{
  "name": "THORNODE-SLASH-POINTS",
  "type": "query alert",
  "query": "max(last_5m):max:thornode.slash_points{*} by {environment} > 3750",
  "message": "@pagerduty",
  "tags": [
    "thorchain"
  ],
  "options": {
    "notify_audit": false,
    "silenced": {},
    "include_tags": true,
    "thresholds": {
      "critical": 3750,
      "warning": 3250
    },
    "require_full_window": false,
    "new_host_delay": 300,
    "notify_no_data": false,
    "renotify_interval": 0,
    "escalation_message": ""
  },
  "priority": 1,
  "restricted_roles": null
}
