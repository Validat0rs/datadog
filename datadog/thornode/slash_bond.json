{
  "name": "THORNODE-SLASH-BOND",
  "type": "query alert",
  "query": "change(sum(last_10m),last_10m):max:thornode.bond{*} by {environment}.as_count() < -25",
  "message": "@pagerduty",
  "tags": [
    "thorchain"
  ],
  "options": {
    "notify_audit": false,
    "silenced": {},
    "include_tags": true,
    "thresholds": {
      "critical": -25,
      "warning": -10
    },
    "require_full_window": false,
    "new_host_delay": 300,
    "notify_no_data": false,
    "renotify_interval": 0,
    "escalation_message": ""
  },
  "priority": 1,
  "restricted_roles": null
}
